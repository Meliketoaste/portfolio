---
import Layout from '../layouts/Layout.astro'

import Container from '@/components/Container.astro'
import Projects from '@/components/Projects.astro'
import Header from '@/components/Header.astro'
import Link from '@/components/Link.astro'

import { buttonVariants } from '@/components/ui/button'
import { Card } from '@/components/ui/card'
import { cn } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
const iconMap = {
  Website: 'lucide:globe',
  GitHub: 'lucide:github',
  LinkedIn: 'lucide:linkedin',
  Twitter: 'lucide:twitter',
  Email: 'lucide:mail',
  RSS: 'lucide:rss',
}
---

<Layout>
  <style>
    .gradient-overlay {
      background: radial-gradient(
          at 00% 00%,
          rgb(30, 144, 255) 0px,
          transparent 50%
        ),
        radial-gradient(at 90% 10%, rgb(251, 126, 80) 0px, transparent 50%);
    }
    /*.fontie {*/
    /*  font-family: 'CalSans';*/
    /*}*/
    html {
      -moz-osx-font-smoothing: grayscale !important;
      -webkit-font-smoothing: antialiased !important;
      font-smoothing: antialiased !important;
    }
  </style>
  <div
    class="gradient-overlay absolute bottom-0 left-0 right-0 top-0 -z-10 h-screen w-full opacity-10 blur-[100px]"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 right-0 top-0 -z-10 h-screen w-full bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_50%,transparent_100%)] md:bg-[size:50px_50px] lg:bg-[size:70px_70px]"
  >
  </div>
  <Header />
  <Container class="flex flex-col items-start px-4 py-16 lg:py-20">
    <h1
      class="fontie motion-preset-blur-right mb-2 mt-10 inline justify-center gap-1 bg-gradient-to-b from-foreground via-foreground/90 to-foreground/60 to-90% bg-clip-text pb-2 font-calsans text-4xl font-bold text-transparent sm:mt-20 sm:text-6xl"
      style="opacity: 1; will-change: transform; transform: none;"
    >
      {/* I would either add a 10 margin or none */}
      Hi, I'm <span class="text-orange-400">Emil Nordg√•rd</span><br />
      Software Developer
    </h1>
    <p class="pr-0 text-muted-foreground md:text-xl lg:pr-96">
      Passionate, loves coding, linux and picking up languages as fast as i can
      <a class="text-orange-300 underline hover:text-orange-200" href="/about"
        >More about me</a
      >.
    </p>

    <div class="mt-8 flex flex-row gap-2">
      <Link
        href="/about"
        class={cn(buttonVariants({ variant: 'outline' }), '')}
      >
        Contact
      </Link>
    </div>
    {
      //    <Link
      //      href="/about"
      //      class={cn(buttonVariants({ variant: 'outline', size: 'icon' }), '')}
      //    >
      //      <Icon name="lucide:github" class="size-4" />
      //    </Link>
    }

    <h2 class="mt-40 pr-0 font-calsans text-xl text-muted-foreground lg:pr-96">
      Projects:
    </h2>

    <h1 class="pr-0 font-calsans text-2xl text-foreground lg:pr-96">
      What I've been working on
    </h1>

    <div
      aria-hidden="true"
      class="pointer-events-none fixed inset-x-0 bottom-0 z-10 h-16 bg-gradient-to-b from-transparent to-[#eee] dark:bg-gradient-to-b dark:from-transparent dark:to-background"
    >
    </div>
    <Card className="w-full p-2">ede</Card>
    <Projects />
    <Projects />
    <Projects />
    <br />
    <br />
    <br />
