---
import { Code } from 'astro:components'
import { Badge } from '@/components/ui/badge'

import logo from '../../assets/1_F24_White-BG_sRGB.png'
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from '@/components/ui/card'

import { Image } from 'astro:assets'
---

<Card
  className="  transition-colors duration-200 hover:bg-secondary/20 w-full flex flex-row "
>
  <div class="flex w-full sm:flex-row flex-col">
    <div class="flex flex-col">
      <CardHeader>
        <CardTitle
          className="bg-gradient-to-b from-foreground via-foreground/90 to-foreground/70 to-90% bg-clip-text font-calsans text-4xl font-bold text-transparent "
          >F24 Nordics</CardTitle
        >

        <CardDescription className="text-base text-foreground">
          Nov, 2024, 1 Week, Type: Placement
        </CardDescription>
      </CardHeader>
      <CardContent className="text-base text-muted-foreground">
        Completed a series of tasks and assignments related to REST APIs
      </CardContent>
    </div>
  </div>

  <div
    class="p-4 rounded-lg bg-foreground flex sm:w-1/2 justify-end items-center"
  >
    <Image class="" src={logo} alt="A bird sitting on a nest of eggs." />
  </div>
</Card>
