---
import Container from '@/components/Container.astro'
import Link from '@/components/Link.astro'

import Menu from '@/components/Menu.tsx'

import { NAV_LINKS, SITE } from '@/consts'
import { Image } from 'astro:assets'
import logo from '../../public/static/logo.svg'
---

<header id="header" class="sticky font-normal top-0 z-10" transition:persist>
  <Container>
    <div class="flex flex-wrap items-center justify-between gap-4 py-4">
      <Link
        href="/"
        class="font-calsans flex flex-shrink-0 items-center gap-2 text-xl font-semibold transition-colors duration-300 hover:text-primary"
      >
        <!--<Image src={logo} alt="Logo" class="size-8" />-->
        Portfolio
        {
          //SITE.TITLE
        }
      </Link>
      <div class="flex items-center gap-2 md:gap-4">
        <nav class="hidden items-center gap-4 text-sm sm:gap-6 md:flex">
          {
            NAV_LINKS.map((item) => (
              <Link
                href={item.href}
                class="capitalize text-muted-foreground transition-colors hover:text-foreground/80"
              >
                {item.label}
              </Link>
            ))
          }
        </nav>
      </div>
    </div>
  </Container>
</header>
