---
import Link from '@/components/Link.astro'
import { Badge } from '@/components/ui/badge'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

type Props = {
  project: CollectionEntry<'projects'>
}

const { project } = Astro.props
---

<div
  class="my-2 not-prose rounded-xl border p-4 transition-colors duration-300 ease-in-out hover:bg-secondary/50"
>
  <Link href={project.link} class="flex flex-col gap-4 sm:flex-row" external>
    {
      project.image && (
        <div class="max-w-[200px] sm:flex-shrink-0">
          <Image
            src={project.image}
            alt={project.name}
            width={1200}
            height={630}
            class="object-cover"
          />
        </div>
      )
    }
    <div class="flex-grow">
      <h3 class="mb-1 text-lg font-semibold">
        {project.name}
      </h3>
      <p class="mb-2 text-sm text-muted-foreground">
        {project.description}
      </p>
      {
        project.tags && (
          <div class="flex flex-wrap gap-2">
            <Badge variant="secondary">
              {project}
              ))
            </Badge>
          </div>
        )
      }
    </div>
  </Link>
</div>
